#include <stdio.h>
 int main() 
{
    char str[80];
    int i=0;
    printf("Input: ");
    scanf("%s", str);
    for(i = 0; str[i]; i++)
    {
        if(str[i]=='a' || str[i]=='b')
        {
            str [i]=toupper(str[i]);
        }
        if (str[i]=='+')
        {
            str[i]='-';
        }
    }
    printf("Output: %s\n", str);
     return 0;
}
